		- @workdays.each do |workday|
			tr
				td= workday.restaurant
				td= workday.workable.name
				td= workday.day
				td= workday.smena
				td= workday.check
				td= workday.time
				td= workday.dish_count
				td= workday.number
				td= workday.triangles
				td= workday.full_triangles
				td= workday.dishes
				td= workday.mains
				td= workday.garnirs
				td= workday.sauces
				td= workday.drinks
				td= workday.desserts
				td= workday.points
